body {
    background-color: #fff;
}

a:hover{
    color: #1f91f3;
}

#page-wrapper {
    /*border-color:#e7e7e7;*/
    background-color: #e9e9e9;
}

/*
 * nav
 */
.nav .open>a, 
.nav .open>a:focus, 
.nav .open>a:hover,
.nav > li > a:focus,
.nav > li > a:hover,
.navbar-inverse .navbar-nav > li > a:focus,
.navbar-inverse .navbar-nav > li > a:hover {
	background-color: #8bd5fc;
	border-color: #337ab7;
}

/*
 * navbar-top
 */
.navbar-inverse {
	background-color: #22a9ff;
	background-image: url("../../../images/blue/banner.png");
	background-repeat: no-repeat;
}

.navbar-brand{
	background-image: url("../../../images/logo.png");
	background-position: 4px 12px;
	background-repeat: no-repeat;
}

#skin #default .fa {
	color: #1f91f3;
}

#skin #yellow .fa{
	color: #ff9600;
}


/*
 * navbar-left
 */
.sidebar ul li {
    border-color:#e7e7e7;
}

.sidebar ul li a:hover {
	color:#fff;
    background-color: #38d5ff;
}

.sidebar ul li a.active {
	color:#fff;
    background-color: #22a9ff;
}

