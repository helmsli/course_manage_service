/*
 * login-2(skin:blue)
 * PS:默认为此样式风格.
 * 
 */
.login-head{
	height:287px;
	background:url("../../../images/blue/login_blue_2.jpg") top center no-repeat #4b9fdd;
}

.login-head .navbar-brand{
	position:absolute;
	top: 50px;
	left: 50%;
	-webkit-transform:translate(-50%,-5%);
	transform:translate(-50%,-5%);
	padding-top: 100px;
	height: auto!important;
	color:#fff;
	background:url("../../../images/login-welcome.png") top center no-repeat!important;
}

.login-head .navbar-content{
	padding: 10px 15px;
	border: solid 1px #fff;
}

.login-head span{
	display:block;
	font-size:52px;
	line-height:54px;
	text-align:center;
}

.login-head p{
	display: block;
	font-size:24px;
	text-align:center;
	white-space:nowrap;
}

.login-main{
	min-height:257px;
	background-color:#fff;
}

.login-main .btn-primary{
	background-color:#1f91f3 !important;
}

.login-main .login-panel{
	margin-top:15%;
}

.login-main .panel-heading{
	display:none;
}

.login-main .show{
	display:none!important;
}

.login-main .show ~ .show{
	display:block!important;
	margin-left:0;
}

@media(min-width:992px){
	.login-main .show ~ .show{
		display:block!important;
		margin-left:33.33333333%;
	}
}

/*
 * form-step
 */
.form-step ul li:after{
	background:url("../../../images/blue/icon.png") 0px 0px no-repeat;
}

.form-step .current{
	color:#fff;
	background-color:#6ebbf0;
}

.form-step .current:before{
	background:url("../../../images/blue/icon.png") -22px 0px no-repeat;
}

.form-step .current:after{
	background:url("../../../images/blue/icon.png") -22px -49px no-repeat;
}

/*
 * tree
 */
/*.tree-nav .ztree{
	background-color: #fff;
}*/
.tree-title{
    color: #fff;
    background-color: #22a9ff;
}

.tree-nav .ztree li a.curSelectedNode{
	color: #22a9ff;
}

.tree-nav .ztree li a:hover{
	color: #22a9ff;
}

/*
 * pagination
 */
.pagination > li > a,
.pagination > li > span {
	color: #1f91f3;
}

.pagination > li > a:focus,
.pagination > li > a:hover,
.pagination > li > span:focus,
.pagination > li > span:hover {
	color: #1f91f3;
	background-color: #eee;
	border-color: #ddd;
}

.pagination > .active > a,
.pagination > .active > a:focus,
.pagination > .active > a:hover,
.pagination > .active > span,
.pagination > .active > span:focus,
.pagination > .active > span:hover {
	background-color: #1f91f3;
	border-color: #1f91f3;
}
